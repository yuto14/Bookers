<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>index</title>
</head>

<body>

<main>
<div class="index">
    <h1>Books</h1>
        <table>
        	    <tr>
        	    	<th>Title</th> <th>body</th> <th colspan="3"></th>
        	    </tr>
                <% @books.each do |book| %>
        	    <tr>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                    <td><%= link_to "Show", book_path(book.id) %></td>

                    	<td><%= link_to "Edit", edit_book_path(book.id) %></td>

                    	<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
                </tr>
    　　　　　　　<% end %>
        </table>
</div>

<div class="new">

    <h2 class="h2-index">New book</h2>
      <% if @book.errors.any? %>
    <div class="alert-warning">
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%=message %>error</li>
            <% end %>
        </ul>
    </div>
      <% end %>

    <%= form_for(@book) do |f| %>

    <div class="index-Title">
        <p>Title</p>
            <%= f.text_field :title %>
    </div>
    <div class="index-Body">
        <P>Body</P>
            <%= f.text_area :body %>
     </div>

        <P class="create"><%= f.submit 'Create Book' %></P>

    <% end %>
</div>
</main>
</body>
</html>